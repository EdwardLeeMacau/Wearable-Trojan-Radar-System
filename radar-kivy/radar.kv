#:kivy 1.11.1

# Root: FloatLayout
UserInterface:
    # panel: panel
    radar: radar

    canvas:
        Color:
            rgba: 1.0, 1.0, 1.0, 1.0

        Rectangle:
            pos: self.pos
            size: self.size

    RadarInterface:
        id: radar
        pos: self.pos
        width: min(self.size)
        height: min(self.size)

    # SignalOscilloscope:
    #     center: self.parent.center

    # ControlPanel:
    #     id: panel
    #     center: self.parent.center

<ControlPanel>:
    BoxLayout:

# FloatLayout
<RadarInterface>:
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1

        # Rectangle:
        #     size: self.size

        Line:
            width: 2.0
            points: (0, self.center_y, self.right, self.center_y)

        Line:
            width: 2.0
            points: (self.center_x, 0, self.center_x, self.top)

        Line:
            width: 2.0
            ellipse: (self.center_x - 0.5 * self.width, self.center_y - 0.5 * self.height, self.width, self.height)

        Line:
            width: 2.0
            ellipse: (self.center_x - 0.375 * self.width, self.center_y - 0.375 * self.height, 0.75 * self.width, 0.75 * self.height)

        Line:
            width: 2.0
            ellipse: (self.center_x - 0.25 * self.width, self.center_y - 0.25 * self.height, 0.5 * self.width, 0.5 * self.height)

# Trace Points
<Target>:
    size_hint: 0.02, 0.02

    canvas:
        Color:
            rgba: 0.8, 0.8, 0, 1

        Ellipse:
            size: self.size

