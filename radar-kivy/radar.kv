#:kivy 1.11.1

# Root: FloatLayout
<UserInterface>:
    radar: radar
    # panel: panel
 
    canvas:
        Color:
            rgba: 1.0, 1.0, 1.0, 1.0

        Rectangle:
            pos: self.pos
            size: self.size

    RadarInterface:
        id: radar
        pos: 0, 0
        width: min(self.size)
        height: min(self.size)
        padding: 0
        spacing: 0

    # SignalOscilloscope:
    #     center: self.parent.center

    # ControlPanel:
    #     id: panel
    #     center: self.parent.center

# FloatLayout
<RadarInterface>:
    targets: targets
    
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 1

        Line:
            width: 2.0
            points: (0, self.center_y, self.right, self.center_y)

        Line:
            width: 2.0
            points: (self.center_x, 0, self.center_x, self.top)

        Line:
            width: 1.0
            ellipse: (0, 0, self.width, self.height)

        Line:
            width: 1.0
            ellipse: (0.125 * self.width, 0.125 * self.height, 0.75 * self.width, 0.75 * self.height)

        Line:
            width: 1.0
            ellipse: (0.25 * self.width, 0.25 * self.height, 0.5 * self.width, 0.5 * self.height)

    TargetInterface:
        id: targets

# Tracing Canvas
<TargetInterface>:
    size_hint: 1.0, 1.0

